<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.photogram">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_app_final"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_app_final"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".perfil.EditarPerfil" />
        <activity android:name=".feed.VerFoto" />
        <activity android:name=".perfil.VerPerfil" />
        <activity android:name=".feed.subir_foto" />
        <activity android:name=".inicio.LoginModerador" />
        <activity android:name=".inicio.RegistroPerfil" />
        <activity android:name=".moderador.FeedModerador" />
        <activity android:name=".inicio.RegistrarUsuario" />
        <activity android:name=".feed.Feed" />
        <activity android:name=".mensajeria.ChatIndividualGUI" />
        <activity android:name=".mensajeria.ChatsGUI" />
        <activity android:name=".inicio.Iniciar_Sesion">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>