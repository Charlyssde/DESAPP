<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Perfil.EditarPerfil"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_camara"
        android:layout_marginTop="70dp"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="260dp"
        android:background="@drawable/ic_agregar"
        android:text="" />

    <TextView
        android:id="@+id/textEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="35dp"
        android:text="Estado:"
        android:textColor="#ffffff "
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nombreEditar"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:backgroundTint="#ffffff "
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#ffffff "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="467dp"
        android:layout_marginTop="10dp"

        android:layout_gravity="center" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:text="Estado:"
        android:textColor="#ffffff "
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/estado"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:backgroundTint="#ffffff "
        android:ems="10"
        android:inputType="text"
        android:textColor="#ffffff "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="467dp"
        android:layout_marginTop="10dp"

        android:layout_gravity="center" />
    <TextView
        android:id="@+id/textcorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:text="Correo:"
        android:textColor="#ffffff "
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/correo"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:backgroundTint="#ffffff "
        android:ems="10"
        android:inputType="text"
        android:textColor="#ffffff "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="467dp"
        android:layout_marginTop="10dp"

        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="35dp"
        >

        <Button
            android:id="@+id/button_cancelar"
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:backgroundTint="#512DA8"
            android:text="Cancelar"
            android:textColor="#ffffff "
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="642dp"

            />
        <Button
            android:id="@+id/button_aceptar"
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:backgroundTint="#512DA8"
            android:text="Aceptar"
            android:textColor="#ffffff "
            tools:layout_editor_absoluteX="262dp"
            tools:layout_editor_absoluteY="642dp" />


    </LinearLayout>

</LinearLayout>